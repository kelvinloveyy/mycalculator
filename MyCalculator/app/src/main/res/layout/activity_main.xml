<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/show_bt"
                android:layout_width="match_parent"
                android:textColor="#131313"
                android:textSize="80px"
                android:layout_height="206dp"
                android:ems="10"
                android:inputType="textMultiLine" />


            <GridLayout
                android:layout_width="279dp"
                android:layout_height="298dp"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:text="9" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="8" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="5" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="4" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:text="6" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="3" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="2" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text="1" />

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="." />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:text="删除" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="7" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="0" />

            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="293dp"
                android:layout_gravity="bottom|right">

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:text="+" />

                <Button
                    android:id="@+id/button_cut"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="-" />

                <Button
                    android:id="@+id/button_divide"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="÷" />

                <Button
                    android:id="@+id/button_multiply"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="*" />

                <Button
                    android:id="@+id/button_equal"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:background="@drawable/sel"
                    android:text="=" />
            </GridLayout>

        </FrameLayout>

        <!-- The navigation drawer -->

        　　　　　　<!-- 左边弹出布局区 -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="300dp"
            android:layout_gravity="right|bottom"
            android:background="#fff"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="293dp"
                android:layout_gravity="bottom|right">

                <Button
                    android:id="@+id/button_sq"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:text="^" />

                <Button
                    android:id="@+id/button_rt"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="√" />

                <Button
                    android:id="@+id/button_cos"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="cos" />

                <Button
                    android:id="@+id/button_sin"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="sin" />

                <Button
                    android:id="@+id/button_tan"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:text="tan" />
                <Button
                    android:id="@+id/button_fac"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="!  " />

                <Button
                    android:id="@+id/button_ln"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="ln" />

                <Button
                    android:id="@+id/button_lg"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="lg" />

                <Button
                    android:id="@+id/button_pr"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:text="%" />

                <Button
                    android:id="@+id/button_drg"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="DRG" />
            </GridLayout>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>
</LinearLayout>